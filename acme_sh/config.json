{
  "name": "ACME.sh Certs (Pillarama)",
  "version": "2.0.3cp10",
  "slug": "acme_sh",
  "description": "Manage certificates with ACME.sh",
  "url": "https://github.com/pillarama/ha_addon_acme_sh",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "once",
  "boot": "manual",
  "init": false,
  "map": ["ssl:rw"],
  "options": {
    "account": "str",
    "server": [null],
    "domains": [null],
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "dns": {}
  },
  "schema": {
    "account": "str",
    "server": "list(|letsencrypt|zerossl||)?",
    "domains": ["str"],
    "certfile": "str",
    "keyfile": "str",
    "dns": {
      "provider": "str",
      "env": ["str"]
    }
  }
}
